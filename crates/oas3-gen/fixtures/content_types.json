{
	"openapi": "3.1.0",
	"info": {
		"title": "Content Types Test API",
		"version": "1.0.0"
	},
	"paths": {
		"/mixed-content": {
			"get": {
				"operationId": "getMixedContent",
				"responses": {
					"200": {
						"description": "JSON response",
						"content": {
							"application/json": {
								"schema": {
									"type": "object",
									"properties": {
										"message": { "type": "string" }
									}
								}
							}
						}
					},
					"201": {
						"description": "Text response",
						"content": {
							"text/plain": {
								"schema": {
									"type": "string"
								}
							}
						}
					},
					"202": {
						"description": "Image response",
						"content": {
							"image/png": {
								"schema": {
									"type": "string",
									"format": "binary"
								}
							}
						}
					}
				}
			}
		}
	}
}
